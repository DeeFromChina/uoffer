		}
		if(document.getElementById("jobyear2") != null) {
			if(!checkInput('jobyear2',"工作岗位的工作经验","30",false)) return false;
		}
		if(!checkInput('offerUserDescription',"工作技能","200",false)) return false;
		return true;
	}
